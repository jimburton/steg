-- Initial steg.cabal generated by cabal init.  For further documentation, 
-- see http://haskell.org/cabal/users-guide/

name:                steg
version:             0.1.0.0
synopsis:            Simple steganography tool
-- description:         
license:             MIT
license-file:        LICENSE
author:              Jim Burton
maintainer:          j.burton@brighton.ac.uk
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable steg
  main-is:             Main.hs
  other-modules:       Steg.Parse 
  Ghc-Options:         -Wall
  build-depends:       base 
                     , binary-strict >=0.4 && <0.5
                     , bmp >= 1.2.5.2
                     , bytestring >=0.10 && <0.11
                     , word8 >=0.1 && <0.2
                     , QuickCheck
  hs-source-dirs:      src
  default-language:    Haskell2010

Test-Suite steg-testsuite
  Type:                exitcode-stdio-1.0
  Main-is:             TestSteg.hs
  hs-source-dirs:      test, src
  Ghc-Options:         -Wall
  Build-depends:       base
                     , bmp >= 1.2.5.2
                     , binary-strict >=0.4 && <0.5
                     , bytestring >=0.10 && <0.11
                     , word8 >=0.1 && <0.2
                     , QuickCheck

source-repository head
  type:     git
  location: https://github.com/jimburton/steg